---
import "../style/global.css"

const { frontmatter } = Astro.props;
---

<html lang="en">
<head>
  <meta charset="UTF-8">

  <title>{ frontmatter.title }</title>

  <style>
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    img.title-image {
      margin-top: 1rem;
      border-radius: 0.5rem;
    }

    h3 {
      margin-top: 1rem;
    }

    p {
      margin-top: 1rem;
      opacity: 0.3;
    }

    main {
      margin-top: 3rem;
      padding: 1rem;
      background-color: #1f1d2b;
      border-radius: 0.5rem;
    }
  </style>
</head>
<body>
    <header>
      <div>
        <h1>{ frontmatter.title }</h1>
        <h3>{ frontmatter.description }</h3>
        <p> Published by { frontmatter.author } on { frontmatter.pubDate.slice(0, 10) }</p>
      </div>
      <img class="title-image" src={ frontmatter.image.url } alt={ frontmatter.image.alt } height="100" />
    </header>
    <main>
      <slot />
    </main>
</body>
</html>